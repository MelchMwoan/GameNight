<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GameNight</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/customCss.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GameNight2.styles.css" asp-append-version="true" />
	<script src="https://kit.fontawesome.com/7b2e89bd55.js" crossorigin="anonymous"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white bg-opacity-25 border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand col-8 col-sm-3 col-md-2 col-xxl-1" asp-area="" asp-controller="Home" asp-action="Index"><img class="img img-fluid" src="~/images/GameNightWidePng.png" alt="GameNightLogo" /></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="False">My Nights</a>
							<ul class="dropdown-menu">
								<li><a class="nav-link text-dark dropdown-item" asp-controller="Night" asp-action="GetHostedNights">Hosted Nights</a></li>
								<li><a class="nav-link text-dark dropdown-item" asp-controller="Night" asp-action="GetJoinedNights">Joined Nights</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Night" asp-action="Nights">Search Nights</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Night" asp-action="CreateNight">Host a New Night</a>
						</li>
					</ul>
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-dark btn d-inline-block" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa-solid fa-user pe-2"></i>Account</a>
						</li>

					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-8 col-xl-10">
					&copy; 2023 - GameNight
				</div>
				<div class="col-6 col-sm-4 col-md-2 col-xl-1">
					<img class="img img-fluid pe-1" src="~/images/GameNightWidePng.png" alt="GameNightLogo" />
					-
				</div>
				<div class="col-6 col-sm-4 col-md-2 col-xl-1">
					<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/be/Avans_Hogeschool_Logo.svg/1200px-Avans_Hogeschool_Logo.svg.png" alt="Taalschool Nederland" class="img img-fluid" />
				</div>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
