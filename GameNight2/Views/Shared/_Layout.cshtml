<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameNight</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/customCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameNight2.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/7b2e89bd55.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white bg-opacity-25 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand col-1" asp-area="" asp-controller="Home" asp-action="Index"><img class="img img-fluid h" src="~/images/GameNightWidePng.png" alt="GameNightLogo"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
	                <ul class="navbar-nav flex-grow-1">
		                <li class="nav-item dropdown">
			                <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="False">My Nights</a>
			                <ul class="dropdown-menu">
				                <li><a class="nav-link text-dark dropdown-item" asp-controller="Night" asp-action="GetHostedNights">Hosted Nights</a></li>
                                <li><a class="nav-link text-dark dropdown-item" asp-controller="Night" asp-action="GetJoinedNights">Joined Nights</a></li>
			                </ul>
		                </li>
		                <li class="nav-item">
			                <a class="nav-link text-dark" asp-area="" asp-controller="Night" asp-action="Nights">Search Nights</a>
		                </li>
		                <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Night" asp-action="CreateNight">Host a New Night</a>
		                </li>
	                </ul>
	                <ul class="navbar-nav">
		                <li class="nav-item">
                            <a class="nav-link text-dark btn d-inline-block" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="fa-solid fa-user pe-2"></i>Account</a>
		                </li>
		                <li class="nav-item">
                            <button class="nav-link text-dark btn"><i class="fa-solid fa-language pe-2"></i>Language</button>
		                </li>

	                </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - GameNight - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
